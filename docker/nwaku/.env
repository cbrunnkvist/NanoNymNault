# Nwaku Docker Compose Configuration
# Copy this file to .env and customize values as needed

# Node Configuration
NWAKU_IMAGE=harbor.status.im/wakuorg/nwaku:v0.37.0-beta
NODEKEY=

# Logging
LOG_LEVEL=DEBUG

# Store Protocol Configuration
# Retention period in days (30 days = ~1 month)
STORE_RETENTION_DAYS=30
# Alternative: Set storage size limit (e.g., 30GB, 100GB)
# STORAGE_SIZE=30GB

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=test123
POSTGRES_DB=waku
POSTGRES_SHM=1g
PG_DATA_DIR=./postgresql

# REST API Configuration
REST_ENABLED=true
REST_ADMIN=true
REST_ADDRESS=0.0.0.0
REST_PORT=8645

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=8003

# Network Configuration
TCP_PORT=30304
UDP_PORT=9005
MAX_CONNECTIONS=150
KEEP_ALIVE=true

# Cluster Configuration
CLUSTER_ID=1

# Discovery Configuration
DISCV5_ENABLED=true
DISCV5_UDP_PORT=9005
DISCV5_ENR_AUTO_UPDATE=true
